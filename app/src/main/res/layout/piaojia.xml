<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="票价查询"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/system_welcome"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <TextView
        android:id="@+id/start_line_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/system_welcome"
        android:layout_marginTop="18dp"
        android:text="@string/start_line_prompt" />

    <LinearLayout
        android:id="@+id/start_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_line_text"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/line_select_spinner"
            android:prompt="@string/start_line_prompt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/station_select_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/end_line_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_line"
        android:layout_marginTop="23dp"
        android:text="@string/end_line_prompt" />

    <LinearLayout
        android:id="@+id/end_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/end_line_text"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/end_line_select_spinner"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/end_station_select_spinner"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_query"
        android:layout_below="@+id/end_line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/output"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="输出结果"
        android:scrollbars="vertical"
        android:layout_below="@+id/button1"/>


</LinearLayout>